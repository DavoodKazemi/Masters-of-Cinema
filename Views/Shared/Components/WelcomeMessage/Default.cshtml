@model string
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (UserManager.GetUserAsync(User).Result.ProfilePicture != null)
{
    <img class="nav-profile-picture" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePicture))">
}
else
{
    <i class="fas fa-user-circle me-2 nav-default-profile-picture"></i>
}

<span class="navbar-user-name">@Model</span>