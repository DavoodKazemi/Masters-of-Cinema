@model User
@{
    ViewData["Title"] = "Personal Data";
    Layout = "~/Views/Shared/_ProfileSettingsLayout.cshtml";
}

@*<h4>@ViewData["Title"]</h4>*@

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download that data.</p>

        <form id="download-data" asp-action="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>

    </div>
</div>

