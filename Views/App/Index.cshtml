@{
    ViewBag.Title = "Home Page";
}

<section class="homepage-welcome-messgae-wrapper container mb-5 mt-5 text-center">
    Welcome, <a asp-controller="Settings" asp-action="Index"  target="_blank">@Model.User.FirstName</a>. @*I have built this website, using ASP.Net Core 5.0, JQuery, Sass. *@
    An overview of the website can be found here, as they are listed below. You may visit them first.
</section>

<section class="homepage-popular-lists mb-5 homepage-section">
    <div class="container px-lg-3 mt-4 px-3">
        <div class="row">
            <div class="hompage-section-head" style="border-bottom: 1px solid #456;">
                <a target="_blank" asp-controller="Account" asp-action="CLists" class="hompage-section-head-link">POPULAR LISTS</a></div>
        </div>
    </div>
    @*Popular lists here!*@
    <div class="custom-lists-page mt-2">
        <div class="director-movies-container container list-ajax-container">
            <div class="row px-1 tbody" style="">
                @foreach (var item in Model.PopularLists.Lists)
                {
                    <partial name="~/Views/Shared/HomePage/_PopularLists.cshtml" model="item" />
                }

            </div>
        </div>
    </div>
</section>

<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
<script src="~/js/homepage.js"></script>


<section class="homepage-popular-reviews-wrapper">
    <div class="container px-lg-3 mt-4 px-3">
        <div class="row">
            <div class="hompage-section-head" style="border-bottom: 1px solid #456;">POPULAR REVIEWS</div>
        </div>
    </div>

    <div class="container">
        <div class="row" id="container-masonary">
            @foreach (var item in Model.PopularReviews)
            {
                <partial name="~/Views/Shared/HomePage/_PopularReview.cshtml" model="item" />
            }
        </div>
    </div>
</section>

<section class="homepage-popular-movies-wrapper homepage-movie homepage-section">
    <div class="container px-lg-3 mt-4 px-3">
        <div class="row">
            <div class="hompage-section-head" style="border-bottom: 1px solid #456; text-transform: uppercase;">
            <a target="_blank" class="hompage-section-head-link">Highest Rated Movies</a></div>
        </div>
    </div>

    <div class="container">
        <div class="row" id="container-masonary">
            @foreach (var item in Model.HighestRatedMovies)
            {
                <partial name="~/Views/Shared/HomePage/_HighestRatedMovies.cshtml" model="item" />

            }
        </div>
    </div>
</section>

