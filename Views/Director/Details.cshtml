@model MastersOfCinema.ViewModels.Director
@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Name);
}

<div class="director-info-page container">
    <div class="row">
        @*The movies list section*@
        <div class="director-movies-container col-12 col-lg-9">

            <div class="container-xxl px-1 pe-lg-4">

                <div class="row">
                    <div>FILMS DIRECTED BY</div>
                    <h2>@Html.DisplayFor(model => model.Name)</h2>

                    @foreach (var item in Model.Movies)
                    {

                        <div class="director-list-item mt-3 mb-2 mt-lg-4 mb-lg-3 col-4 col-md-3 col-lg-3 px-0 px-lg-1">
                            <div class="mx-auto">

                                @*Movie poster and its tooltip (title (year)) *@
                                <div class="movie-poster-wrapper mx-auto">
                                    <span class="movie-tooltip">@Html.DisplayFor(modelItem => item.Title) (@Html.DisplayFor(modelItem => item.Year))</span>
                                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id">
                                        <img src="@("~/image/"+item.ImageName)" class="movie-poster" asp-append-version="true" />
                                    </a>
                                </div>


                            </div>

                        </div>
                    }
                </div>
            </div>

        </div>

        @*The director's photo and biography*@
        <section class="director-info-aside col-12 col-lg-3 m-0">
            <div class="portrait text-center text-lg-start">
                <img class="img-fluid" src="@("~/image/"+Model.ImageName)" asp-append-version="true" />
            </div>

            <div class="my-2">
                Country: @Html.DisplayFor(model => model.Country)
            </div>

            <div class="bio">
                @Html.DisplayFor(model => model.Bio)
            </div>



        </section>

    </div>

</div>